@model IEnumerable<chuyenNganh.websiteBanGiay.Data.Order>

@{
    ViewData["Title"] = "Đặt hàng thành công";
    Layout = "_Product";
}

<div class="container text-center mt-5">
    <div class="alert alert-success" role="alert">
        <h1 class="display-4">🎉 Đặt hàng thành công! 🎉</h1>
        <p class="lead">Cảm ơn bạn đã mua hàng tại cửa hàng của chúng tôi.</p>
        <hr>
        <p class="mb-3">
            Mã đơn hàng của bạn: <strong>@ViewData["OrderId"]</strong><br>
            Thời gian đặt hàng: <strong>@ViewData["OrderDate"]</strong>
        </p>
        <p>
            Đơn hàng sẽ được giao đến địa chỉ: <strong>@ViewData["ShippingAddress"]</strong><br>
            Nếu có bất kỳ thắc mắc nào, vui lòng liên hệ với chúng tôi qua hotline: <strong>1800-1234</strong>.
        </p>
        <a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-lg mt-4">Tiếp tục mua sắm</a>
    </div>
</div>

