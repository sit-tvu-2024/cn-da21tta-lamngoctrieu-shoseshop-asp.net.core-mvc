@model IEnumerable<chuyenNganh.websiteBanGiay.Data.ProductSize>

@{
    ViewData["Title"] = "Danh sách kích cỡ sản phẩm";
}

<div class="container mt-5">
    <h1 class="text-center text-primary">Danh sách kích cỡ sản phẩm</h1>

    <p class="text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Thêm kích cỡ mới
        </a>
    </p>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Size)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Quantity)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().PriceAtTime)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Product.ProductName)</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Size)</td>
                            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                            <td>@string.Format("{0:0,0} VND", item.PriceAtTime)</td>
                            <td>@Html.DisplayFor(modelItem => item.Product.ProductName)</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.ProductSizeId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Sửa
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ProductSizeId" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Chi tiết
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ProductSizeId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
