@model chuyenNganh.websiteBanGiay.Data.ProductSize

@{
    ViewData["Title"] = "Chỉnh sửa kích cỡ sản phẩm";
}

<div class="container mt-5">
    <h1 class="text-center text-primary">Chỉnh sửa kích cỡ sản phẩm</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h4 class="card-title mb-4">Thông tin kích cỡ</h4>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="ProductSizeId" />

                    <!-- Product Selection -->
                    <div class="form-group mb-3">
                        <label asp-for="ProductId" class="form-label">Tên sản phẩm</label>
                        <select asp-for="ProductId" class="form-select" asp-items="ViewBag.ProductId">
                            <option value="">Chọn sản phẩm</option>
                        </select>
                        <span asp-validation-for="ProductId" class="text-danger"></span>
                    </div>

                    <!-- Size -->
                    <div class="form-group mb-3">
                        <label asp-for="Size" class="form-label">Kích cỡ</label>
                        <input asp-for="Size" class="form-control" placeholder="Nhập kích cỡ (ví dụ: S, M, L)" maxlength="10" />
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>

                    <!-- Quantity -->
                    <div class="form-group mb-3">
                        <label asp-for="Quantity" class="form-label">Số lượng</label>
                        <input asp-for="Quantity" type="number" class="form-control" placeholder="Nhập số lượng" min="1" max="10000" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <!-- Price At Time -->
                    <div class="form-group mb-3">
                        <label asp-for="PriceAtTime" class="form-label">Giá tại thời điểm (VND)</label>
                        <input asp-for="PriceAtTime" type="number" class="form-control" placeholder="Nhập giá (tối thiểu 1,000 VND)" min="1000" step="1000" />
                        <span asp-validation-for="PriceAtTime" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="mt-4 text-center">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-save"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
