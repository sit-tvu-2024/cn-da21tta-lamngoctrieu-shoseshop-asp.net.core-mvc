@model IEnumerable<chuyenNganh.websiteBanGiay.Data.Category>

@{
    ViewData["Title"] = "Danh mục";
}

<div class="container mt-4">
    <h1 class="text-center">Danh sách danh mục</h1>

    <div class="text-end mb-3">
        <a class="btn btn-success" asp-action="Create">
            <i class="fas fa-plus"></i> Thêm mới danh mục
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>
                <th>
                    Ảnh
                </th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        <img src="@item.ImageUrl" alt="Ảnh danh mục" style="width: 100px; height: auto;">
                    </td>
                    <td class="text-center">
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.CategoryId">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.CategoryId">
                            <i class="fas fa-eye"></i> Xem chi tiết
                        </a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.CategoryId">
                            <i class="fas fa-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Font Awesome để hiển thị icon -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
