@model chuyenNganh.websiteBanGiay.Data.Category

@{
    ViewData["Title"] = "Xóa danh mục";
}

<div class="container mt-4">
    <h1 class="text-center text-danger">Xóa danh mục</h1>

    <h3 class="text-center text-warning">Bạn có chắc chắn muốn xóa danh mục này?</h3>
    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">Thông tin danh mục</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Tên danh mục</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CategoryName)
                </dd>

                <dt class="col-sm-3">Mô tả</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt class="col-sm-3">Ngày tạo</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CreatedDate)
                </dd>

                <dt class="col-sm-3">Đường dẫn ảnh</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ImageUrl)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="CategoryId" />
        <div class="text-center">
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </form>
</div>

<!-- Font Awesome để hiển thị icon -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
