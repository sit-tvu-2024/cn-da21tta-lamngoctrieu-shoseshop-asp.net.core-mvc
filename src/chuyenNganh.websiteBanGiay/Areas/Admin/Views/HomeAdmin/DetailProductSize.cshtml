@model chuyenNganh.websiteBanGiay.Data.ProductSize
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chi tiết kích thước sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center">Chi tiết kích thước sản phẩm</h1>
    <hr />
    <div class="card">
        <div class="card-header bg-primary text-white">
            Thông tin kích thước sản phẩm
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Kích thước (Size):</dt>
                <dd class="col-sm-8">@Model.Size</dd>

                <dt class="col-sm-4">Số lượng:</dt>
                <dd class="col-sm-8">@Model.Quantity</dd>

                <dt class="col-sm-4">Giá tại thời điểm:</dt>
                <dd class="col-sm-8">@Model.PriceAtTime VNĐ</dd>

                <dt class="col-sm-4">Sản phẩm:</dt>
                <dd class="col-sm-8">@Model.Product?.ProductName</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-area="admin" asp-action="EditProductSize" asp-route-id="@Model.ProductSizeId" class="btn btn-warning">Chỉnh sửa</a>
        <a asp-area="admin" asp-action="ProductSize" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>
