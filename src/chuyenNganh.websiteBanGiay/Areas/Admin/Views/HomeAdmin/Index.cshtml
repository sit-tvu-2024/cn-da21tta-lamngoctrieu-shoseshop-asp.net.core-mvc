@{
    ViewData["Title"] = "Quản lý Cửa hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Tiêu đề trang -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-primary">Trang Quản Lý Cửa Hàng</h1>
        <a href="#" class="btn btn-success"><i class="fas fa-plus-circle"></i> Thêm mới</a>
    </div>

    <!-- Thông tin thống kê -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card shadow-sm border-left-primary">
                <div class="card-body">
                    <h5 class="text-secondary">Sản phẩm</h5>
                    <h3 class="text-dark">150</h3>
                    <p class="text-muted mb-0">Tổng số sản phẩm</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card shadow-sm border-left-success">
                <div class="card-body">
                    <h5 class="text-secondary">Đơn hàng</h5>
                    <h3 class="text-dark">500</h3>
                    <p class="text-muted mb-0">Đơn hàng đã xử lý</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card shadow-sm border-left-warning">
                <div class="card-body">
                    <h5 class="text-secondary">Doanh thu</h5>
                    <h3 class="text-dark">$50,000</h3>
                    <p class="text-muted mb-0">Tháng này</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card shadow-sm border-left-danger">
                <div class="card-body">
                    <h5 class="text-secondary">Khách hàng</h5>
                    <h3 class="text-dark">1200</h3>
                    <p class="text-muted mb-0">Khách hàng mới</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bảng dữ liệu -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách sản phẩm</h5>
            <a href="#" class="btn btn-light btn-sm"><i class="fas fa-download"></i> Xuất dữ liệu</a>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>#</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Giày Nike Air Max</td>
                        <td>$150</td>
                        <td>25</td>
                        <td><span class="badge bg-success">Còn hàng</span></td>
                        <td>
                            <a href="#" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                            <a href="#" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                            <a href="#" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Adidas UltraBoost</td>
                        <td>$180</td>
                        <td>10</td>
                        <td><span class="badge bg-danger">Hết hàng</span></td>
                        <td>
                            <a href="#" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                            <a href="#" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                            <a href="#" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
